[Unit]
Description=Grow Monitoring UI
After=multi-user.target

[Service]
Type=simple
WorkingDirectory=/var/grow-python
ExecStart=/var/grow-python/ui.py /var/lib/grow-monitor/settings.yml
Restart=on-failure
StandardOutput=syslog+console
StandardError=syslog+console

[Install]
WantedBy=multi-user.target
